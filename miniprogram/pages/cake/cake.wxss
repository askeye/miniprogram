.cake{
  color: #3c2314;
  letter-spacing: 1.5rpx;
}
.menu {
  display: flex;
  flex-wrap: wrap;
}

.menu_item {
  width: 25%;
  text-align: center;
  padding: 12rpx 0;
}

.menu_name {
  color: #3c2314;
  letter-spacing: 2.6rpx;
  font-size: 24rpx;
}

.menu_img {
  width: 90rpx;
  height: 90rpx;
  display: block;
  margin: 0 auto;
}

.cake_title {
  border-top: 1px solid #fae9d6;
  border-bottom: 1px solid #fae9d6;
  background-color: #fcf6e5;
  padding: 10rpx 0;
}

.cake_title_h2 {
  text-align: center;
  font-weight: bold;
  font-size: 30rpx;
}

.cake_title_p {
  color: #aba9ab;
  text-align: center;
  margin-top: 14rpx;
  font-size: 24rpx;
}

.cakes {
  display: flex;
  flex-wrap: wrap;
}

.cake_item {
  width: 50%;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}
.cakes {
  display: flex;
  flex-wrap: wrap;
}

.cake_item {
  width: 50%;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.cake_title1 {
  font-size: 24rpx;
  color: #3C2314;
  letter-spacing: 1.5rpx;
  margin-top: 7rpx;
  text-align: center;
}

.cake_desc {
  margin:10rpx 24rpx;
  border: 1px solid #e7e7e7;
  height:56rpx;
  line-height: 56rpx;
  text-align: center;
}

.cake_price {
  color: #3c2314;
  font-size: 24rpx;
  letter-spacing: 1.5rpx;
  display: inline-block;
  vertical-align: middle;
}
.cake_img {
  display: block;
  width: 100%;
}
.add {
  display: inline-block;
  font-size: 44rpx;
  font-weight: 400;
  width: 40rpx;
  height: 40rpx;
  line-height: 39rpx;
  color: #AA8764;
  padding: 0;
  text-align: center;
  border: 1px solid #AA8764;
  border-radius: 50%;
  margin-right: 20rpx;
  float: right;
  margin-top: 5rpx;
  vertical-align: middle;
}
.cov_wrap {
  position: relative;
}

.cover {
  background-color: #fff;
  height: auto;
}
.cake_tit {
  font-weight: 500;
  padding-left: 42rpx;
  height: 76rpx;
  line-height: 76rpx;
  color: rgb(60, 35, 20);
  font-size: 38rpx;
}

.cake_desc1 {
  display: flex;
}
.cake_desc1_img {
  width: 50%;
  height: 224rpx;
}

.cak_right {
  width: 50%;
  padding-top: 6rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #3C2314;
  letter-spacing: 1.5rpx;
}

.cak_item {
  padding-bottom: 12rpx;
}

.cak_item_img {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}

.cak_price {
  color: #AA8764;
  font-weight: 500;
  font-size: 45rpx;
}

.add_cart,
.cake_det {
  display: inline-block;
  background-color: #fff;
  color: #3C2314;
  height: 70rpx;
  line-height: 70rpx;
  margin: 0 auto;
  font-size: 24rpx;
  letter-spacing: 1.5rpx;
  width: 40%;
  margin: 0 5%;
  border: 1px solid #e7e7e7;
  box-sizing: border-box;
}

.add_cart.activess {
  background-color: #3C2314;
  color: #fff;
}

.cake_size {
  display: flex;
  flex-wrap: wrap;
  margin-left: 24rpx;
  margin-top: 24rpx;
}
.cak_btn_wrap {
  border-top: 1px solid #e7e7e7;
  text-align: center;
  vertical-align: middle;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
}
.cake_size .item {
  text-align: center;
  height: 74rpx;
  line-height: 74rpx;
  width: 138rpx;
  border: 1px solid #C8B49B;
  font-size: 24rpx;
  letter-spacing: 1.5rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.item.actives {
  background: url(https://images.ebeecake.com/img_c/size/selected.png) no-repeat;
  background-position: bottom right;
  border: 1px solid #3C2314;
}

.cov_wrap {
  position: relative;
}
